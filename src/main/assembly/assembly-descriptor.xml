<assembly>
    <id>release</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>LICENSE.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>jsonrpc-*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/apidocs</directory>
            <outputDirectory>docs/javadocs</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>org.json.rpc:jsonrpc</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
